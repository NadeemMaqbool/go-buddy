<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4 main-height">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3" >
            <div class="row col-sm-12 content-set">
              <div class="row col-sm-12 border-bottom">
                <h2 class="align-items-center"  style="align-items: center">Add new Country</h2>
              </div>
              <div class="col-sm-10 offset-1 mt-5">
                <div class="col-sm-6 offset-0">
                  {{#if derrors }}
                    {{#each derrors  }}
                          <p class="alert alert-danger">{{ this.msg }}</p>
                    {{/each}}
                  {{/if}}  
                </div>
                
              <form action="save" method="post" name="country">
                
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="inputEmail4">Short Name</label>
                    <input type="text" class="form-control" name ="short_name" value="{{validData.short_name}}" placeholder="Short Country Name">
                    
                  </div>
                  <div class="form-group col-md-6">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPassword4">Long Name</label>
                    <input type="text" class="form-control" name="long_name" placeholder="Long Country Name">
                  </div>

                </div>
                <div class="form-row">
                  <div class="form-group col-md-4">
                    <label for="inputState">Continent</label>
                    <select id="inputState" class="form-control" name="continent">
                      <option value="asia" selected>Asia</option>
                      <option value="africa">Africa</option>
                      <option value="america">America</option>
                      <option value="australia">Australia</option>
                      <option value="europe">Europe</option>
                    </select>
                  </div>
                </div>
                
                <button type="submit" class="btn btn-primary"> Click to Save</button>
              </form>
            </div>
          </div>
        </main>